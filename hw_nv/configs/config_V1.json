{
    "architecture": {
        "upsample_rates": [8,8,2,2],
        "upsample_kernel_sizes": [16,16,4,4],
        "upsample_initial_channel": 512,
        "resblock_kernel_sizes": [3,7,11],
        "resblock_dilation_sizes": [[[1, 1],[3, 1], [5, 1]], [[1, 1],[3, 1], [5, 1]], [[1, 1],[3, 1], [5, 1]]],
        "leaky_slope": 0.1,
        "audio_pools": [0, 1, 2],
        "periods": [2, 3, 5, 7, 11]
    },
    "data" : {
        "batch_size": 16,
        "segment_size": 8192,
        "audio_path": "./data/LJSpeech-1.1/wavs",
        "num_workers": 1
    },
    "optimizer": {
        "lr": 0.0002,
        "betas": [0.8, 0.99]
    },
    "scheduler": {
        "gamma": 0.885
    },
    "trainer": {
        "epochs": 25,
        "save_epoch": 5,
        "validation_epoch": 1
    },
    "paths": {
        "results_dir": "./results",
        "mels_path": "./data/validation_mels",
        "save_dir": "./checkpoints"
    },
    "logger" : {
      "wandb_project": "NV"
    }
}